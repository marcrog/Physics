{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ compila il file attivo",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "clang++ main3.cpp ./myLib/myLib.cpp -I/Library/Frameworks/SDL2.framework/Headers -I./myLib/myLib.h -F/Library/Frameworks -framework SDL2 "
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Attivit√† generata dal debugger."
        }
    ],
    "version": "2.0.0"
}